{
  "name": "@studio/related-tests",
  "version": "0.1.0",
  "description": "Run related tests with lint-staged",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "mocha '*.test.js'",
    "watch": "npm t -- --watch",
    "posttest": "npm run lint && npm run prettier:check",
    "preversion": "npm test",
    "version": "changes --commits --footer",
    "postversion": "git push --follow-tags && npm publish",
    "prettier:check": "prettier --check '**/*.{js,md}'",
    "prettier:write": "prettier --write '**/*.{js,md}'"
  },
  "keywords": [
    "testing",
    "related",
    "tests",
    "lint-staged"
  ],
  "author": "Maximilian Antoni <max@javascript.studio>",
  "eslintConfig": {
    "extends": "@studio"
  },
  "devDependencies": {
    "@sinonjs/referee-sinon": "^8.0.1",
    "@studio/changes": "^2.2.0",
    "@studio/eslint-config": "^2.0.0",
    "eslint": "^7.27.0",
    "eslint-plugin-mocha": "^8.2.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.4.0",
    "prettier": "^2.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --relative"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/javascript-studio/related-tests.git"
  },
  "files": [
    "index.js",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT"
}
